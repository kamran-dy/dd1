<odoo>
       <template id="pdf_report_layout">
           <t t-set="company" t-value="user.company_id"/>
           <div class="header">
            <div class="row" >
                <i>
                    <i class="col-2 mb4">
                       <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 80px;" alt="logo"/>
                    </i>
                    <i t-field="company.partner_id"
                         t-options='{"widget": "contact", "fields":["address","name"],"no_marker": true }'
                    />
                </i>       
            
         </div>
              <i class='pull-right'>
                   Currency: <i t-field="company.currency_id.name">
                     </i>
                     <br/>
                      <t t-set='printed_by'  t-value='0'/>
                      Printed By:   
                      <t t-foreach="request.env['hr.employee'].search([('user_id','=',uid)])" t-as="user">
                         <t t-set='printed_by'  t-value='user.name'/>
                       </t>  
                         <t t-esc="printed_by"/>
                       <br/>
                       <i>
                        Print on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                      </i>
            
                 </i>
              
               
        <div t-if="company.logo or company.report_header" class="row zero_min_height">
            <div class="col-12">
                <div style="border-bottom: 1px solid black;"/>
               
               </div>
           </div> 
       </div>
                
    </template>
</odoo>