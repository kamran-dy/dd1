<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <template id="portal_appraisal_imrovements" name="improvements">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Improvements</t>
            </t>
            <t t-if="not grouped_improvements">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Improvements.
                </div>
            </t>
            <t t-if="grouped_improvements">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_improvements" t-as="improvements">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                 <th class="text-left">Employee</th>
                                <th class="text-left">Grade</th>
                                <th class="text-left">Position</th>
                                <th class="text-left">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="improvements" t-as="improvement">   
                            <t t-if="improvement.employee_id.parent_id.user_id.id == uid">   
                                
                                <tr>
                                      <td class="text-left">
                                        #<span t-esc="improvement.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/appraisal/improvement/#{improvement.id}?{{ keep_query() }}"><span t-field="improvement.employee_id.name"/></a>
                                    </td>
                                    
                                     
                                    <td class="text-left">
                                        <span t-esc="improvement.grade.name" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="improvement.position"  />
                                    </td>
                                   
                                    <td class="text-left">
                                        <t t-if="improvement.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >Draft</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_waiting'">
                                            <i class="badge badge-pill badge-info" >Sent For Employees Review</i>
                                        </t>
                                        <t t-if="improvement.state == 'confirmed'">
                                            <i class="badge badge-pill badge-info" >Approved</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_review'">
                                            <i class="badge badge-pill badge-info" >Reviewed By Employee</i>
                                        </t>
                                        <t t-if="improvement.state == 'follow_up'">
                                            <i class="badge badge-pill badge-info" >Follow Up</i>
                                        </t>
                                         <t t-if="improvement.state == 'done'">
                                            <i class="badge badge-pill badge-info" >Done</i>
                                        </t>
                                       
                                    </td>                                   
                            
                                </tr>
                            </t>
                                <t t-if="improvement.employee_id.user_id.id == uid">   
                                
                                <tr>
                                      <td class="text-left">
                                        #<span t-esc="improvement.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/appraisal/improvement/#{improvement.id}?{{ keep_query() }}"><span t-field="improvement.employee_id.name"/></a>
                                    </td>
                                    
                                     
                                    <td class="text-left">
                                        <span t-esc="improvement.grade.name" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="improvement.position"  />
                                    </td>
                                   
                                    <td class="text-left">
                                        <t t-if="improvement.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >Draft</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_waiting'">
                                            <i class="badge badge-pill badge-info" >Sent For Employees Review</i>
                                        </t>
                                        <t t-if="improvement.state == 'confirmed'">
                                            <i class="badge badge-pill badge-info" >Confirmed</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_review'">
                                            <i class="badge badge-pill badge-info" >Reviewed By Employee</i>
                                        </t>
                                        <t t-if="improvement.state == 'follow_up'">
                                            <i class="badge badge-pill badge-info" >Follow Up</i>
                                        </t>
                                         <t t-if="improvement.state == 'done'">
                                            <i class="badge badge-pill badge-info" >Done</i>
                                        </t>
                                       
                                    </td>                                   
                            
                                </tr>
                            </t>
                              
                            </t>    

                            <tr>
                               <div>
                                <t class="col-lg-7 col-md-8" >
                                    <a href="/appraisal/improvement/create/" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Create</div> </a> 
                                    </t>
                                </div>  
                            </tr> 
                        </tbody>
                    </t>
                </t>
            </t>   
        </t>
    </template>
     
        <template id="portal_appraisal_improvement" name="Improvement">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="improvement.id" class="col-9 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="improvement.id"/>)</small>
                                <div class="col-3 col-md-2 text-right">
                                    <small class="text-right">Status:</small>
                                    <span t-field="improvement.state" class=" badge badge-pill badge-info" title="Current stage of this improvement"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
                <t t-set="card_body">
                    <div class="mb-1" >
                        <strong>Employee:</strong> <span t-field="improvement.employee_id.name" />
                    </div>

                    <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Date Of Joining:</strong> <span t-field="improvement.date_of_joining" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.position">
                            <strong>Position:</strong> <span t-field="improvement.position" />
                        </div>
                    </div>
                    <h3>PIP Info</h3>
                     <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Rating Scale:</strong> <span t-field="improvement.rating_scale" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.follow_up_period">
                            <strong>Follow Up Period:</strong> <span t-field="improvement.follow_up_period" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.follow_up_date">
                            <strong>Follow Up Date:</strong> <span t-field="improvement.follow_up_date" />
                        </div>   
                    </div>
                    
                    <div class="row mb-4">
                        <table class="table table-sm table-striped table-bordered" id="improvementTable">
                            <thead>
                                <th>Performance Improvement Area</th>
                                <th>Action Plan and Timeline</th>
                                <th>Rating</th>
                            </thead>
                            <tbody>
                              <t t-foreach="improvement.appraisal_improve_line" t-as="improve_line">    
                                <tr>
                                    <td><span t-field="improve_line.performance_improvement_area" /></td>
                                    <td><span t-field="improve_line.action_plan" /></td>
                                    <td><span t-field="improve_line.rating" /></td>
                                </tr>
                              </t>  
                            </tbody>
                        
                        </table>
                    </div>

                    
                    
                    
                </t>
            </t>

           
        </t>
    </template>
    
    
    
         <template id="create_appraisal_improvement" name="Appraisal Improvement Request">
        <t t-call="portal.portal_layout">
               <div id="wrap">
                            <div class="oe_structure" data-oe-model="ir.ui.view" data-oe-id="2052" data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]/div[1]">
                                <section class="s_title parallax s_parallax_is_fixed bg-white-100 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/de_portal_appraisal/static/description/eb1.jpg'); background-position: 50% 0;"></span>
                                    <div class="o_we_bg_filter bg-white-50"></div>
                                    <div class="container">
                                        <h1 style="margin-left:10px">Appraisal Improvements</h1>
                                    </div>
                                </section>
                            </div>
                         
                   
                           <t t-call="portal.portal_table"   id="optionTableimprovement">
                           
                        <thead>
                            
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Performance Improvement Area</th>
                                <th class="text-left">Action Plan and Timeline</th>
                                <th class="text-left">Rating</th>
                            </tr>
                            
                        </thead>
                        <tbody>
                            <tr>
                            
                            </tr>
                            
                                
                        <form id="portal_appraisal_improvement_form_line" data-toggle="validator" action="/appraisal/improvement/line/save">
                                
                                <tr>
                                   
                                     <td > 
                                       <input type="char" class="form-control s_website_form_input" name="performance_improvement_area" required="True"/>

                                    </td>
                                    
                                     <td class="text-left">
                                        <input type="char" class="form-control s_website_form_input" name="action_plan" required="True"/>
                                    </td>
                                    <td class="text-left">
                                        <input type="char" class="form-control s_website_form_input" name="rating" required="True"/>
                                    </td>
                                    
                                   
                                        <td id="submit_1"   class="new">
                                         <div class="form-group col-12 s_website_form_submit" data-name="Submit Button Line">
                                            <div style="width: 200px;" class="s_website_form_label"></div>
                                            <button type="submit" class="btn btn-primary pull-left" id="submit_line">Add</button>
                                            <span id="s_website_form_result"></span>
                                         </div>
                                         </td>
                                      
                                </tr>
                                </form> 
                                 <tr>                                
                            </tr>
                            
                        </tbody>
                </t>
                   
                   
                     <form id="portal_appraisal_improvement_form" data-toggle="validator" action="/appraisal/improvement/save">

                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                   
                                    <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="improvement1">
                                                <span class="s_website_form_label_content">Employee</span>
                                                <span class="s_website_form_mark"> *</span>

                                            </label>
                                            <div class="col-sm">
                                            
                                                <select class="form-control  o_website_form_input" name="employee_id" readonly="1" required="1">
                                                                    <t t-foreach="employees" t-as="emp">
                                                                        <option t-att-value="emp.id">
                                                                            <t t-esc="emp.name"    />
                                                                        </option>
                                                                    </t>
                                                                </select>
                                            </div>
                                        </div>
                                    </div>
                               
                                   
                                    
                                    <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="improvement5">
                                                <span class="s_website_form_label_content">Follow Up Period</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <select  id="follow_up_period" class="form-control  s_website_form_input" name="follow_up_period" >
                                                <option value="1">1 Month</option>
                                                <option value="2">2 Month</option>
                                                <option value="3">3 Month</option>
                                         </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                     <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="improvement3">
                                                <span class="s_website_form_label_content">Did the Employee undertake corrective action?</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <select  id="follow_up_period" class="form-control  s_website_form_input" name="follow_up_period" >
                                                <option value="no">No</option>
                                                <option value="yes">Yes</option>    
                                         </select>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="improvement_comment">
                                                <span class="s_website_form_label_content">Comments</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                 <textarea id="comments" class="form-control s_website_form_input" name="comments" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                        <div style="width: 200px;" class="s_website_form_label"></div>
                                        <button type="submit" class="btn btn-primary pull-left">Submit</button>
                                        <span id="s_website_form_result"></span>
                                    </div>
                                </div>
                            </form>
          
            
            <br/>
            <br/>
            
            <t t-call="portal.portal_table"   id="optionTableimprovement">
                           
                        <thead>
                            
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left"></th>
                                <th class="text-left"></th>
                                <th class="text-left"></th>
                            </tr>
                            
                        </thead>
                        <tbody>
                                                          
                            <t t-foreach="appraisal_improvements_list" t-as="emp_improve"> 
                                <tr>
                                   
                                    <td>
                                      <span t-esc="emp_improve['performance_improvement_area']" />

                                    </td>
                                    
                                     <td class="text-left">
                                      <span t-esc="emp_improve['action_plan']" />
                                    </td>
                                    <td class="text-left">
                                      <span t-esc="emp_improve['rating']" />
                                    </td>
                                    
                                   
                                 </tr>
                            </t>
                        </tbody>
                </t>
            </div>    
        </t>
    </template> 

</odoo>


