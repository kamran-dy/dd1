                                 <div class="row">
                                    <div class="col-lg-7 col-xl-6 mr-lg-auto">
                                    </div>  
                                    </div>  
                                 </div>  
                                        
                               <div class="s_website_form_rows row s_col_no_bgcolor">
                                 <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="performance_improvement_area">
                                               <span class="s_website_form_label_content">Performance Improvement Area</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                              <t t-if='improvement.state!="follow_up"' >
