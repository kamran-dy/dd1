                                              </t>    
                                                <t t-esc='improvement.action_plan'/>


                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                <br/>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                 <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="action_plan">
                                               <span class="s_website_form_label_content">Action Plan and Timeline</span>
                                            </label>
                                            <div class="col-sm">
                                              <t t-if='improvement.state!="follow_up"' >
                                                <input id='action_plan' type="text" class="form-control s_website_form_input" name="action_plan"  required='1' t-att-value="improvement.action_plan"/>
                                              </t>  
                                              <t t-esc='improvement.action_plan'/>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                <br/>
                                <t t-if='improvement.state=="follow_up"' >
                                 <div class="s_website_form_rows row s_col_no_bgcolor">
                                  <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="action_plan">
                                               <span class="s_website_form_label_content">Rating *</span>
                                            </label>
                                            <div class="col-sm">
                                                
                                            <select  id="managerratinglevelline" class="form-control  s_website_form_input" name="rating"  required='1'>
                                                <option value="blank"> </option>
                                                <option value="Outstanding Performance">Outstanding Performance</option>
                                                <option value="Excellent Performance">Excellent Performance</option>
                                                <option value="Strong Performance">Strong Performance</option>
                                                <option value="Needs Improvement">Needs Improvement</option>
                                                <option value="Unsatisfactory">Unsatisfactory</option>
                                            </select> 
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                               </t>     
                                
                                <input id='id' type="hidden" class="form-control s_website_form_input" name="line_id"  t-att-value="improvement.id"/>                               
                                                                                                  
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/> 
                                    
                                 <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                        <div style="width: 200px;" class="s_website_form_label"></div>
                                        <button id='objectivesubmit' type="submit" class="btn btn-primary pull-left">Update</button>
                                        <span id="s_website_form_result"></span>
                                    </div>
                                <br/>                                                          
                                </form>                                                                                             
                            </div>         
                       </t>
              </template>
    
    
