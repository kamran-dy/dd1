<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <template id="portal_appraisal_imrovements" name="improvements">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Improvements</t>
            </t>
            <t t-if="not grouped_improvements">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Improvements.
                </div>
            </t>
            <t t-if="grouped_improvements">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_improvements" t-as="improvements">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                 <th class="text-left">Employee</th>
                                <th class="text-left">Grade</th>
                                <th class="text-left">Position</th>
                                <th class="text-left">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="improvements" t-as="improvement">   
                            <t t-if="improvement.employee_id.parent_id.user_id.id == uid">   
                                
                                <tr>
                                      <td class="text-left">
                                        #<span t-esc="improvement.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/appraisal/improvement/#{improvement.id}?{{ keep_query() }}"><span t-field="improvement.employee_id.name"/></a>
                                    </td>
                                    
                                     
                                    <td class="text-left">
                                        <span t-esc="improvement.grade.name" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="improvement.position"  />
                                    </td>
                                   
                                    <td class="text-left">
                                        <t t-if="improvement.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >Draft</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_waiting'">
                                            <i class="badge badge-pill badge-info" >Sent For Employees Review</i>
                                        </t>
                                        <t t-if="improvement.state == 'confirmed'">
                                            <i class="badge badge-pill badge-info" >Approved</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_review'">
                                            <i class="badge badge-pill badge-info" >Reviewed By Employee</i>
                                        </t>
                                        <t t-if="improvement.state == 'follow_up'">
                                            <i class="badge badge-pill badge-info" >Follow Up</i>
                                        </t>
                                         <t t-if="improvement.state == 'done'">
                                            <i class="badge badge-pill badge-info" >Done</i>
                                        </t>
                                       
                                    </td>                                   
                            
                                </tr>
                            </t>
                                <t t-if="improvement.employee_id.user_id.id == uid">   
                                
                                <tr>
                                      <td class="text-left">
                                        #<span t-esc="improvement.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/appraisal/improvement/#{improvement.id}?{{ keep_query() }}"><span t-field="improvement.employee_id.name"/></a>
                                    </td>
                                    
                                     
                                    <td class="text-left">
                                        <span t-esc="improvement.grade.name" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="improvement.position"  />
                                    </td>
                                   
                                    <td class="text-left">
                                        <t t-if="improvement.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >Draft</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_waiting'">
                                            <i class="badge badge-pill badge-info" >Sent For Employees Review</i>
                                        </t>
                                        <t t-if="improvement.state == 'confirmed'">
                                            <i class="badge badge-pill badge-info" >Confirmed</i>
                                        </t>
                                        <t t-if="improvement.state == 'employee_review'">
                                            <i class="badge badge-pill badge-info" >Reviewed By Employee</i>
                                        </t>
                                        <t t-if="improvement.state == 'follow_up'">
                                            <i class="badge badge-pill badge-info" >Follow Up</i>
                                        </t>
                                         <t t-if="improvement.state == 'done'">
                                            <i class="badge badge-pill badge-info" >Done</i>
                                        </t>
                                       
                                    </td>                                   
                            
                                </tr>
                            </t>
                              
                            </t>    

                            <tr>
                               <div>
                                <t class="col-lg-7 col-md-8" >
                                    <a href="/appraisal/improvement/create/" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Create</div> </a> 
                                    </t>
                                </div>  
                            </tr> 
                        </tbody>
                    </t>
                </t>
            </t>   
        </t>
    </template>
     
        <template id="portal_appraisal_improvement" name="Improvement">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="improvement.id" class="col-9 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="improvement.id"/>)</small>
                                <div class="col-3 col-md-2 text-right">
                                    <small class="text-right">Status:</small>
                                    <span t-field="improvement.state" class=" badge badge-pill badge-info" title="Current stage of this improvement"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
                <t t-set="card_body">
                 <t t-if='improvement.state=="draft"'> 
                   <div>
                        <a class="mb-5" id="submit-object" t-attf-href="/new/improvement/line/save/#{improvement.id}?">
                            <button class="btn btn-primary pull-right">Add Improvement</button>
                        </a>                        
                    </div> 
                </t>
                     <div  class='pull-left'>
                        <t t-if="improvement.state == 'draft'">
                                <t t-if="improvement.employee_id.parent_id.user_id.id == uid">
                                        <a t-attf-href="/action/confirm/improvement/#{improvement.id}?" > <div class="btn btn-primary pull-right" style="height:30px; line-height:100%; ">Confirm</div> </a>
                                      </t>
                                    </t>
                                <t t-if="improvement.state == 'confirmed'">
                                   
                                      <t t-if="improvement.employee_id.parent_id.user_id.id == uid">
                                        <a t-attf-href="/action/send/improvement/#{improvement.id}?" > <div class="btn btn-primary pull-right" style="height:30px; line-height:100%; ">Send for Employee Review</div> </a>
                                      </t>
                                </t> 
                                <t t-if="improvement.state == 'follow_up'">
                                   
                                      <t t-if="improvement.employee_id.parent_id.user_id.id == uid">
                                        <a t-attf-href="/action/done/#{improvement.id}?" > <div class="btn btn-primary pull-right" style="height:30px; line-height:100%; ">Done</div> </a>
                                      </t>
                                </t>
                               <t t-if="improvement.state=='employee_waiting'">                                   
                                      <t t-if="improvement.employee_id.user_id.id == uid">
                                        <a t-attf-href="/action/confirm/employee/#{improvement.id}?" > <div class="btn btn-primary pull-right" style="height:30px; line-height:100%; ">Confirm</div> </a>
                                      </t>
                                </t>      
                     </div>
                    <br/>
                    <br/>
                    <br/>
                 <form id="improveForm"  action="/test"  method="post"  enctype="multipart/form-data">
                    
                     
                    <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="employee_objective">
                                         <span class="s_website_form_label_content">Employee</span>
                            </label>
                        <div class="col-sm">
                            <t t-esc="employee_name.name"    />
                                <input type="hidden" class="form-control s_website_form_input" name="employee_id"   t-att-value='employee_name.id' />   
                                </div>
                            </div>
                        </div>
                                    
                <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="manager_Employeee">
                                <span class="s_website_form_label_content">Manager</span>
                        </label>
                        <div class="col-sm">
                                <t t-esc="managers"    />
                        </div>
                  </div>
                </div>
               </div>
                
                <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="employee_objective">
                                         <span class="s_website_form_label_content">Employee Code</span>
                            </label>
                        <div class="col-sm">
                            <t t-esc="employee_name.emp_number"    />
                                
                                </div>
                            </div>
                        </div>
                                    
                <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="manager_Employeee">
                                <span class="s_website_form_label_content">Department</span>
                        </label>
                        <div class="col-sm">
                                <t t-esc="employee_name.department_id.name"    />
                        </div>
                  </div>
                </div>
               </div>  
                
                 <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="employee_objective">
                                         <span class="s_website_form_label_content">Grade</span>
                            </label>
                        <div class="col-sm">
                            <t t-esc="employee_name.grade_designation.name"/>
                                
                                </div>
                            </div>
                        </div>
                                    
                <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="manager_Employeee">
                            <span class="s_website_form_label_content">Job Position</span>
                        </label>
                        <div class="col-sm">
                                <t t-esc="employee_name.job_id.name"    />
                        </div>
                  </div>
                </div>
               </div>  
               <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="employee_objective">
                                         <span class="s_website_form_label_content">Employee Type</span>
                            </label>
                        <div class="col-sm">
                            <t t-esc="employee_name.emp_type"/>
                                
                                </div>
                            </div>
                        </div>
                                    
                <div class="form-group col-6 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="manager_Employeee">
                                <span class="s_website_form_label_content">Date Of Joining</span>
                        </label>
                        <div class="col-sm">
                                <t t-esc="employee_name.date"    t-options='{"widget": "date"}'/>
                        </div>
                  </div>
                </div>
               </div>  
                
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/> 

                <input id='recordid' type="hidden" class="form-control s_website_form_input" name="record_id"   t-att-value="improvement.id"/>
                
                </form> 
                 <div >
                 
                  <t t-set='sr_count' t-value='0'/>   
                  <t t-foreach="improvement.appraisal_improve_line" t-as="line"> 
                    <t t-set='sr_count' t-value='sr_count + 1'/>     
                    <section class="s_text_image pt32 pb32 o_colored_level"  style='box-shadow:3px;' data-snippet="s_image_text" data-name="Image - Text">
                     
                    <div class="container" style='box-shadow:3px;'>                      
                      <div class="row align-items-center">
                        <div class="col-lg-12 pt16 pb16 o_colored_level col-lg-12 border rounded shadow">
                            <div data-snippet="s_share"  data-name="Share">
                                <i class="pull-left">Improvement# <t t-esc='sr_count'/> </i>
                                <t t-if='line.rating'>
                                  <i class="badge badge-pill badge-info pull-right" ><t t-esc='line.rating'/></i> 
                                </t>    
                            </div>  
                            <br/>
                             <h2><t t-esc='line.performance_improvement_area'/></h2>
                              <p class="o_default_snippet_text"><t t-esc='line.action_plan'/></p>                  
                            
                              <div>                                  
                                 <div data-snippet="s_share"  data-name="Share">                                     
                                   <t t-if='improvement.state=="draft"'>
                                       <a t-attf-href="/delete/improvement/line/save/#{line.id}?" class="fa fa-trash pull-right" style="font-size:20px;color:red"></a>                    
                                       <a t-attf-href="/edit/improvement/line/#{line.id}?" class="fa fa-pencil-square-o pull-right" style="font-size:20px;color:green"></a>
                                   </t>    
                                   <t t-if='improvement.state=="follow_up"'>
                                       <a t-attf-href="/edit/improvement/line/#{line.id}?" class="fa fa-pencil-square-o pull-right" style="font-size:20px;color:green"></a>
                                   </t>       
                                </div>
                                </div>      
                        </div>
                      </div>
                    </div>
                  </section> 
                 </t>     
                </div>                  
                </t>
            </t>       
        </t>
    </template> 
    
    
