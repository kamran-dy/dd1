        <template id="portal_appraisal_improvement" name="Improvement">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="improvement.id" class="col-9 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="improvement.id"/>)</small>
                                <div class="col-3 col-md-2 text-right">
                                    <small class="text-right">Status:</small>
                                    <span t-field="improvement.state" class=" badge badge-pill badge-info" title="Current stage of this improvement"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
                <t t-set="card_body">
                    <div class="mb-1" >
                        <strong>Employee:</strong> <span t-field="improvement.employee_id.name" />
                    </div>

                    <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Date Of Joining:</strong> <span t-field="improvement.date_of_joining" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.position">
                            <strong>Position:</strong> <span t-field="improvement.position" />
                        </div>
                    </div>
                    <h3>PIP Info</h3>
                     <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Rating Scale:</strong> <span t-field="improvement.rating_scale" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.follow_up_period">
                            <strong>Follow Up Period:</strong> <span t-field="improvement.follow_up_period" />
                        </div>
                        <div class="col-12 col-md-6" t-if="improvement.follow_up_date">
                            <strong>Follow Up Date:</strong> <span t-field="improvement.follow_up_date" />
                        </div>   
                    </div>
                    
                    <div class="row mb-4">
                        <table class="table table-sm table-striped table-bordered" id="improvementTable">
                            <thead>
                                <th>Performance Improvement Area</th>
                                <th>Action Plan and Timeline</th>
                                <th>Rating</th>
                            </thead>
                            <tbody>
                              <t t-foreach="improvement.appraisal_improve_line" t-as="improve_line">    
                                <tr>
                                    <td><span t-field="improve_line.performance_improvement_area" /></td>
                                    <td><span t-field="improve_line.action_plan" /></td>
                                    <td><span t-field="improve_line.rating" /></td>
                                </tr>
                              </t>  
                            </tbody>
                        
                        </table>
                    </div>

                    
                    
                    
                </t>
            </t>

           
        </t>
    </template>
    
    
    
