<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_custom" model="report.paperformat">
            <field name="name">Employee OT Entitled</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>
        <template id="employee_entitled_pdf">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="text-left">
                            <h1>Employees Overtime Entitlements</h1>
                            <div class="row">
                                <div class="col-3">
                                    <b>
                                       Company:
                                   </b>
                                   <span t-esc="company_name"/>
                                </div>
                                <div class="col-3">
                                    <div class="col-5">
                                    <b>
                                       Location:
                                   </b>
                                   <span t-esc="location"/>
                                </div>
                                </div>
                                <div class="col-3">
                                    <b>
                                       Employee Type:
                                   </b>
                                   <span t-esc="employee_type"/>
                                </div>
                                <div class="col-3">
                                    <b>
                                       Employee Status:
                                   </b>
                                    <t t-if="employees">
                                       <span t-esc="employees[0]['employee_status']"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <b>
                                       Grade Type:
                                   </b>
                                   <span t-esc="grade_type"/>
                                </div>
                                <div class="col-3">
                                    <b>
                                       Department:
                                   </b>
                                   <span t-esc="department"/>
                                </div>
                                <div class="col-3">
                                    <b>
                                       OT Entitled:
                                   </b>
                                    <t t-if="employees">
                                       <span t-esc="employees[0]['ot_entitled']"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                       <div>
                           <table class="table table-condensed" style="border: 1px solid black;border-collapse: collapse;width: 100%;">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black;">
                                                <b style="color:black">Sr #</b>
                                        </th>
                                        <th style="border: 1px solid black;">
                                                <b style="color:black">Emp #</b>
                                        </th>
                                        <th style="border: 1px solid black;">
                                                <b style="color:black">Name</b>
                                        </th>
                                        
                                        <th style="border: 1px solid black;">
                                            <b style="color:black">Department </b>
                                        </th>


                                        <th style="border: 1px solid black;">
                                            <b style="color:black">Emp Type</b>
                                        </th>

                                        <th style="border: 1px solid black;">
                                            <b style="color:black">Staff Type</b>
                                        </th>

                                        <th style="border: 1px solid black;">
                                            <b style="color:black">OT Entitled</b>
                                        </th>

                                        <th style="border: 1px solid black;">
                                            <b style="color:black">Location</b>
                                        </th>
                                    </tr>
                                </thead>
                               <t t-set="count" t-value="1"/>
                               <t t-foreach="employees" t-as="em">
                                    <tbody class="invoice_tbody">
                                        <tr style="border: 1px solid black">
                                           <td style="border: 1px solid black">
                                               <span t-esc="count"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['emp_code']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['name']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['dep_name']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['emp_type']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['g_type']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['ot_entitled']"/>
                                           </td>
                                           <td style="border: 1px solid black">
                                               <span t-esc="em['location']"/>
                                           </td>
                                            <t t-set="count" t-value="count+1"/>
                                       </tr>
                                    </tbody>
                                    
                                </t>
                           </table>
                       </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
